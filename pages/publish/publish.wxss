/* pages/publish/publish.wxss */
.pub-box {
  max-width: 100%;
}

.rotation image {
  width: 100%;
  height: 100%;
}

.pub-title {
  width: 100%;
  height: 70rpx;
  line-height: 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  box-shadow: 15rpx 10rpx 10rpx rgba(0, 0, 0, 0.2);
}

.title-left {
  position: relative;
}

.title-left::after {
  position: absolute;
  content: "";
  left: -15rpx;
  top: 12rpx;
  width: 8rpx;
  height: 38rpx;
  background-color: #80c6ea;
}

.title-right {
  position: relative;
  color: #a4a3a9;
}

.title-content {
  color: #a4a3a9;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
}

.content-item {
  height: 55rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.1); */
  border-bottom: 1rpx solid #d2d1d6;
}

.map-function {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 170rpx;
  width: 100%;
}

.map-function view {
  height: 100%;
  width: 20%;
  font-size: 25rpx;
  color: #364247;
  text-align: center;
}

.map-function view image {
  height: 70%;
  width: 100%;
}

.the-new {
  border-top: 1rpx solid rgba(0, 0, 0, 0.2);
}
.new-title {
  padding: 10rpx 30rpx;
  font-weight: 400;
  position: relative;
  margin-bottom: 15rpx;
  box-shadow: 10rpx 10rpx 10rpx rgba(0, 0, 0, 0.2);
}

.new-title::after {
  position: absolute;
  content: "";
  left: 15rpx;
  top: 15rpx;
  width: 8rpx;
  height: 38rpx;
  background-color: #80c6ea;
}

.new-item {
  /* border-top: 1rpx solid rgba(0, 0, 0, 0.2); */
  padding: 2rpx 20rpx;
  box-shadow: 20rpx 20rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-top: 15rpx;
}

.cont-title {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.cont-title image {
  width: 15%;
  height: 100%;
}

.cont-title-name {
  color: #364247;
  font-weight: 400;
  margin-left: 20rpx;
}
.cont-title-time {
  color: #a4a3a9;
  margin-left: 20rpx;
}

.item-content {
  margin-top: 10rpx;
}

.item-content-cont,
.item-content-pos {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.item-goods {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
