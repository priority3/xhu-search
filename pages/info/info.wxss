/* pages/info/info.wxss */
.info-title {
  border-bottom: 14rpx solid rgba(206, 198, 198, 0.2);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.item {
  margin-left: 30rpx;
  margin-top: 40rpx;
  height: 100%;
  width: 320rpx;
  display: flex;
  justify-content: flex-start;
}

.item > view {
  margin-top: 15rpx;
  margin-left: 20rpx;
  width: 200rpx;
}
.item-cont {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-right {
  text-align: center;
  margin-right: 50rpx;
  width: 50rpx;
}

.item-red {
  margin-left: 15rpx;
  margin-top: 5rpx;
  text-align: center;
  line-height: 40rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: white;
  background-color: #fe3130;
}

.item-time {
  color: gray;
  font-size: small;
  font-weight: 300;
  text-align: center;
  line-height: 40rpx;
  width: 40rpx;
  height: 40rpx;
}

.item image {
  font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
  margin-top: 15rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.bottom {
  height: 170rpx;
  width: 100%;
}
