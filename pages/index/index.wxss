.index-box {
  position: relative;
}

.but-input {
  position: absolute;
  left: 50%;
  top: 5%;
  transform: translate(-50%, -50%);
  text-align: center;
  width: 98%;
  height: 2rem;
  border: 0.2rpx solid rgba(0, 0, 0, 0.2);
  border-radius: 0.5em;
  z-index: 3;
  background-color: #fff;
}

.map-container {
  width: 100%;
  height: 900rpx;
}

.pos-content {
  position: absolute;
  bottom: 18%;
  width: 90%;
  left: 5%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.pub-but {
  width: 80rpx;
}

.poiName {
  font-weight: 600;
  font-size: 40rpx;
}
